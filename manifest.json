{
    "manifest_version": 3,
    "name": "InChatSight",
    "version": "1.0",
    "description": "Injects an AI chatbot into web chat platforms to provide isnights on your converstion.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": [
         "*://*.whatsapp.com/*",
        "*://*.messenger.com/*",
        "*://*.instagram.com/*"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://openrouter.ai/*",
                "*://*.whatsapp.com/*",
                "*://*.messenger.com/*",
                "*://*.instagram.com/*"
            ],
            "js": ["content.js"]
        }
    ]
}